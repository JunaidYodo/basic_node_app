{
	"name": "baseapp",
	"version": "1.0.0",
	"description": "server for Base app",
	"main": "server.js",
	"type": "module",
	"engines": {
		"node": ">=18.0.0"
	},
	"scripts": {
		"test": "echo \"Error: no test specified\" && exit 1",
		"setup": "node setup.js",
		"production": "cross-env NODE_ENV=production node --experimental-loader=extensionless server.js",
		"start": "npm run production",
		"dev": "cross-env NODE_ENV=development nodemon --experimental-loader=extensionless server.js",
		"lint": "eslint .",
		"prettier": "prettier --write \"**/*.{js,json,css,md}\"",
		"format": "prettier --check .",
		"ci-check": "npm run lint && npm run format",
		"prisma:generate": "prisma generate",
		"prisma:migrate": "prisma migrate dev",
		"prisma:deploy": "prisma migrate deploy"
	},
	"husky": {
		"hooks": {
			"pre-commit": "lint-staged"
		}
	},
	"lint-staged": {
		"*.js": [
			"prettier --write",
			"eslint --fix",
			"git add"
		]
	},
	"keywords": [
		"base",
		"app",
		"server"
	],
	"author": "yodo",
	"license": "ISC",
	"devDependencies": {
		"eslint": "^8.52.0",
		"eslint-config-airbnb-base": "^15.0.0",
		"eslint-config-prettier": "^9.0.0",
		"eslint-plugin-import": "^2.29.0",
		"eslint-plugin-prettier": "^5.0.1",
		"husky": "^8.0.3",
		"lint-staged": "^15.0.2",
		"nodemon": "^3.0.1",
		"prettier": "^3.0.3",
		"prettier-plugin-organize-imports": "^3.2.3",
		"prisma": "^6.4.1"
	},
	"dependencies": {
		"@prisma/client": "^6.4.1",
		"bcrypt": "^5.1.1",
		"compression": "^1.7.4",
		"cors": "^2.8.5",
		"cross-env": "^7.0.3",
		"dotenv": "^16.3.1",
		"ejs": "^3.1.10",
		"escape-html": "^1.0.3",
		"express": "^4.18.2",
		"express-async-handler": "^1.2.0",
		"express-rate-limit": "^7.1.2",
		"extensionless": "^1.6.1",
		"helmet": "^7.0.0",
		"http-status-codes": "^2.3.0",
		"jsonwebtoken": "^9.0.2",
		"morgan": "^1.10.1",
		"multer": "^1.4.5-lts.1",
		"nodemailer": "^7.0.10",
		"response-time": "^2.3.2",
		"ulid": "^2.3.0",
		"winston": "^3.17.0",
		"winston-daily-rotate-file": "^5.0.0",
		"yup": "^1.3.2"
	}
}
